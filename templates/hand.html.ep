<% use SVG qw(outline); %>\
<svg xmlns="http://www.w3.org/2000/svg" viewbox="-58 -50 560 100">
<% for my $i (0 .. $#$hand) { %>\
<% next unless $hand->[$i]; %>
<g transform="translate(<%= $i*110 %>,0)">
<%= include 'tiles/'.$hand->[$i]{template}, tile => $hand->[$i] %>
<%= outline( class => 'hand', id => "hand$i", 'tile-type' => $hand->[$i]{type} ) %>
</g>
<% } %>
</svg>

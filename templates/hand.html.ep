% use Tiles;
%
% for my $i (0 .. $#$hand) {
%     next unless $hand->[$i];
<g transform="translate(<%= $i*110 %>,0)">
<%= include 'tiles/'.$hand->[$i]{template}, tile => $hand->[$i] %>
</g>
<%= include 'tiles/outline', d => { x => ($i*110), y => 0, class => 'hand', id => "hand$i", type => $hand->[$i]{type} } %>
% }

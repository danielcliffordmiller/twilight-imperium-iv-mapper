% use Tiles;
%
% for my $i (0 .. $#$hand) {
%     next unless $hand->[$i];
<%= include 'tiles/'.Tiles::template($hand->[$i]), x => ($i*130), y => 0, tile => $hand->[$i] %>
<%= include 'tiles/outline', d => { x => ($i*130), y => 0, class => 'hand', id => "hand$i", type => Tiles::type($hand->[$i]) } %>
% }

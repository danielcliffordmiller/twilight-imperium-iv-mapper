%
% use TileSvg;
%
% my $planet = $tile->{planets}[0];
% my $color = TileSvg::trait_color($planet) || "black";
% 
<use href="#<%= TileSvg::ring_id($tile) %>"/>
<% if ($planet->{tech}) { %>\
<circle cx="22" cy="-3" fill="<%= TileSvg::tech_color($planet) %>" r="5"/>
<% } %>\
<text text-anchor="middle" y="2" font-size="14" fill="<%= $color %>">\
<%= $planet->{resources}." / ".$planet->{influence} %>\
</text>

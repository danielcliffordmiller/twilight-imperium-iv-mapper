% my ($r, $n) = split /,/, $id;
<path \
ic-trigger-on="" \
ic-post-to="/" \
id="<%= $id %>" \
class="<%= join ' ', map { "hand$_" } (0 .. 5) if $r == 1%> tile map" \
d="M -25 -43 l 50 0 25 43 -25 43 -50 0 -25 -43 z" \
transform="translate(<%= "$x,$y" %>)" \
fill="black" fill-opacity="0.0" stroke-width="2" stroke="black"/>

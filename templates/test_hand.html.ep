% use Tiles;
% use TileSvg qw(xy_coords);
% use SVG qw(outline);
%
<% sub hand_coords { {
    use integer;
    my $i = shift;
    return ( ($i+2)/3, $i );
} } %>
<g transform="translate(750, 50)">
% for my $i (0 .. $#$hand) {
%     next unless $hand->[$i];
%     my ($x, $y) = xy_coords(hand_coords($i));
<g transform="translate(<%= "$x,$y" %>)">
<%= include 'tiles/'.$hand->[$i]{template}, tile => $hand->[$i] %>
<%= outline( class => 'hand', id=>"hand$i", type => $hand->[$i]{type} ) %>
</g>
% }
</g>
